{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main>


  {{!-- Breadcrumbs --}}

  {{> breadcrumb}}

  <h1 class="mb-5">{{header}}</h1>

  <section class="row">

    <div class="col-8">
      {{#with contacts_data}}
        <h2 class="mb-3">{{title}}</h2>
                  
          {{#each buttons}}
            {{#if isPrimary}}<button class="btn btn-warning me-2">{{text}}</button>{{/if}}
            {{#if isOutline}}<button class="btn btn-outline-warning me-2">{{text}}</button>{{/if}}
          {{/each}}
                  
          {{#with form}}
            <div class="row mt-4">
              {{#with input}}
                <div class="col-6 mb-3">
                  {{#with surname}}
                    <div class="form-label">{{lable}}</div>
                    <div class="form-control">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                  {{/with}}
                </div>
                <div class="col-6 mb-3">
                  {{#with name}}
                    <div class="form-label">{{lable}}</div>
                    <div class="form-control">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                  {{/with}}
                </div>
                <div class="col-6 mb-3">
                  {{#with phone}}
                    <div class="form-label">{{lable}}</div>
                    <div class="form-control">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                  {{/with}}
                </div>
                <div class="col-6 mb-3">
                  {{#with email}}
                    <div class="form-label">{{lable}}</div>
                    <div class="form-control">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                  {{/with}}
                </div>
              {{/with}}

              <hr class="mt-3">
                  
              {{#each switch}}
                {{#if isActive}}
                  <div class="form-check form-switch mb-3">
                    <label class="form-check-label">{{text}}</label>
                    <input type="checkbox" class="form-check-input">
                  </div>
                {{/if}}
              {{/each}}
            </div>
          {{/with}}
      {{/with}}

      <hr>

      {{#with delivery}}
          <h2>{{title}}</h2>
          <div class="card row">
            <div class="card-body">
              <div class="row">
                  {{#each select}}
                  <div class="col-6">
                    <label class="form-label">{{label}}</label>
                    <select class="form-select">
                      <option selected>{{placeholder}}</option>
                      {{#each options}}
                      <option value="{{value}}">{{text}}</option>
                      {{/each}}
                    </select>
                    </div>
                  {{/each}}
              </div>
            </div>
          </div>

          {{#each delivery_type}}
            <div class="row mt-4">
              <div class="form-check col-6">
                <label class="form-check-label">{{type}}</label>
                <input name="delivery"  class="form-check-input" type="radio">
              </div>
              <div class="col-6">{{value}}</div>
            </div>
          {{/each}}

          <hr>
          
          <h2>Оплата</h2>
          {{#each payment}}
            <div>
              <div class="form-check">
                <label class="form-check-label">
                  {{type}}  
                </label>
                <input name="payment"  class="form-check-input" type="radio">
                <div>{{value}}</div>
              </div>
            </div>
          {{/each}}

          <hr>
          

          <h2>Контактні дані отримувача</h2>
          <div class="row">
            {{#with contact}}
            <div class="col-6 mb-3">
                  {{#with surname}}
                    <div class="form-label">{{lable}}</div>
                    <div class="form-control">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                  {{/with}}
                </div>
                <div class="col-6 mb-3">
                  {{#with name}}
                    <div class="form-label">{{lable}}</div>
                    <div class="form-control">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                  {{/with}}
                </div>
                <div class="col-6 mb-3">
                  {{#with phone}}
                    <div class="form-label">{{lable}}</div>
                    <div class="form-control">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                  {{/with}}
                </div>
                <div class="col-6 mb-3">
                  {{#with email}}
                    <div class="form-label">{{lable}}</div>
                    <div class="form-control">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                  {{/with}}
                </div>
          {{/with}}
          </div>

          <hr>
          
          {{#with coment}}
            <div class="form-label">{{lable}}</div>
            <div class="form-control">{{placeholder}}</div>
          {{/with}}
      {{/with}}

      <hr>

      <h2>Купони</h2>
      {{#with coupon}}
        {{#with select}}
          {{#with available_coupon}}
            <label class="form-label col-12 mt-2">{{lable}}</label>
            <select class="form-select-lg col-12">
            <option selected>{{placeholder}}</option>
              {{#each options}}
                <option value="{{value}}">{{text}}</option>
              {{/each}}
            </select>
          {{/with}}
          {{#with friend_coupon}}
            <label class="form-label col-12 mt-2">{{lable}}</label>
            <select class="form-select-sm col-12">
            <option selected>{{placeholder}}</option>
              {{#each options}}
                <option value="{{value}}">{{text}}</option>
              {{/each}}
            </select>
          {{/with}}
        {{/with}}
        {{#with add}}
        {{#with friend}}
          <label class="form-label mt-2">{{lable}}</label>
          <div class="form-control">{{placeholder}}</div>
          <div class="form-text">{{caption}}</div>
        {{/with}}
        {{#with colleague}}
          <label class="form-label mt-2">{{lable}}</label>
          <div class="form-control">{{placeholder}}</div>
          <div class="form-text">{{caption}}</div>
        {{/with}}
      {{/with}}


      {{/with}}

      <hr>
      {{#with quiz}}
        <h2>{{title}}</h2>
          {{#with preference}}
            <div class="mb-3">{{title}}</div>
            {{#each options}}
              <div>
                <input name="type"  class="form-check-input me-2" type="radio">
                <label class="form-check-label">{{this}}</label>
              </div>
            {{/each}}
          {{/with}}
          {{#with your_expirience}}
              <div class="form-label my-4">{{label}}</div>
              <input class="form-control">
          {{/with}}

          {{#with purchase_frequency}}
            <label class="form-label my-4">{{label}}</label>
            <select class="form-select">
            <option selected>{{placeholder}}</option>
              {{#each options}}
                <option value="{{value}}">{{text}}</option>
              {{/each}}
            </select>
          {{/with}}

          {{#with factors}}
            <div class="my-4">{{title}}</div>
            {{#each options}}
              <div>
              <div class="form-check">
                <label class="form-check-label">
                  {{this}}  
                </label>
                <input name="quiz"  class="form-check-input" type="radio">
                <div>{{value}}</div>
              </div>
            </div>
            {{/each}}
          {{/with}}

      {{/with}}


       
       



      




    </div>

    {{!-- sidebar --}}

    <div class="col-4">
      
        <div class="card mb-3">
          {{#each action_block}}
            <div class="card-body">
              {{#if isPrimary}}<button class="btn btn-success">{{text}}</button>{{/if}}
              {{#if isDanger}}<button class="btn btn-danger">{{text}}</button>{{/if}}
              {{#if isInfo}}<button class="btn btn-info">{{text}}</button>{{/if}}
            </div>
          {{/each}}
        </div>

        <div class="card">
          {{#with total}}
            <div class="card-body">
              <h4>{{title}}</h4>
                {{#each item_list}}
                  <div>{{name}}: {{price}}</div>
                {{/each}}
                <hr>
                {{#each additional_info}}
                  <div>{{text}}: {{value}}</div>
                {{/each}}
                <hr>
                {{#with total_price}}
                  {{text}}: {{value}}
                {{/with}}
                <hr>
                {{#each button}}
                  {{#if isPrimary}}<button class="btn btn-primary mb-3">{{text}}</button>{{/if}}
                   {{#if isOutline}}<button class="btn btn-outline-primary mb-3">{{text}}</button>{{/if}}
                {{/each}}
            </div>
          {{/with}}
        </div>
      
    </div>
    
  </section>
  


</main>
