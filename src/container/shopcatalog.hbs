{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main>
  {{> breadcrumb}}
  <div class="row">
    <h1>{{header}}</h1>
    {{!-- Selectors --}}
    <div class="mb-5">
      <div class="row col-9">
        {{#each sortBlock}}
        <div class="col-4">
          <select class="form-select">
            <option selected>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
          </select>
        </div>
        {{/each}}
      </div>
    </div>

    {{!-- Filters --}}
    <div class="row col-12">

      <div class="card col-4">
        <div class="card-body">
          {{#with filterBlock}}
          {{#with sellers}}
          <h6>{{title}}</h6>
          {{#each list}}
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              {{value}}
            </label>
          </div>
          {{/each}}
          {{/with}}
          <hr>
          {{#with brands}}
          <h6>{{title}}</h6>
          {{#with input}}
          <input type="text" class="form-control mb-3" placeholder="{{placeholder}}">
          {{/with}}
          {{#each options}}
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              {{value}}
            </label>
          </div>
          {{/each}}
          {{/with}}
          <hr>
          {{!-- Edit here --}}
          {{#with price}}
          <h6>{{title}}</h6>

          <div class="row">
            {{#with range}}
            <div class="col-4 mt-2">
              <input type="text" class="form-control" placeholder="{{from}}">
            </div>
            <div class="col-4 mt-2">
              <input type="text" class="form-control" placeholder="{{to}}">
            </div>
            {{/with}}
            {{#with button}}
            <button class="btn btn-outline-secondary btn-sm col-4">{{text}}</button>
            {{/with}}
          </div>
          {{/with}}
          <hr>
          {{!-- End --}}
          {{#each filterList}}
          <h6>{{title}}</h6>
          {{#with input}}
          <input type="text" class="form-control mb-3" placeholder="{{placeholder}}">
          {{/with}}
          {{#each options}}
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              {{value}}
            </label>
          </div>
          {{/each}}
          <hr>
          {{/each}}
          {{/with}}
        </div>
      </div>
      {{!-- product cards --}}
      <div class="row col-8">
        {{> catalogItem}}
      </div>

      {{> shopaction}}
    </div>

  </div>
</main>
