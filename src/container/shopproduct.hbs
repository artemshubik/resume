{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<section>
 

  {{!-- Breadcrumbs --}}

  <div class="col-12">
    <ol class="breadcrumb">
      {{#each breadcrumb}}
      <li class="breadcrumb-item">
        <a class="{{#if @last}}disabled{{/if}}" href="url">{{name}}</a>
      </li>
      {{/each}}
      <ol />
  </div>

  {{!-- Section 1 --}}

  <section class="row">
    {{#with productData}}
    <div class="col-7 pe-5">
      <img src={{img}}>
      {{#with info}}
      <div class="card mt-4">
        <div class="card-body">
          <div class="card-title">{{title}}</div>
          <p>{{about}}</p>
          <div>{{price}}</div>
          {{#each category}}
          {{#if isHot}}<div class="badge text-bg-warning rounded-pill">{{name}}</div>{{/if}}
          {{#if isNew}}<div class="badge text-bg-primary rounded-pill">{{name}}</div>{{/if}}
          {{#if isBonus}}<div class="badge text-bg-info rounded-pill">{{name}}</div>{{/if}}
          {{/each}}
        </div>
      </div>
      {{/with}}
    </div>

    <div class="col-5">
      
      {{#with item}}
      <div class="card mb-4">
        <table class="table">
        <thead>
          <tr>
            {{#each head}}
            <th>{{this}}</th>
            {{/each}}
          </tr>
        </thead>
        {{#each body}}
        <tbody>
          <tr>
            <th>
              {{this.[0]}}
            </th>
            <td>
              {{this.[1]}}
            </td>
            <td>
              {{this.[2]}}
            </td>
          </tr>
        </tbody>
        {{/each}}
      </table>
      </div>
      {{/with}}

      {{#with param}}
        <div class="card mb-4">
          <div class="card-header">
            <div class="card-title">{{title}}</div>
          </div>
            {{#each list}}
              <div class="list-group list-group-flush">
                <div class="list-group-item">
                  {{this}}
                </div>
              </div>
            {{/each}}
        </div>
      {{/with}}

      {{#with alert}}
      <div class="alert alert-danger">
        {{text}}
      </div>
      {{/with}}
    </div>

    <div class="card col-12 mt-4">
      <div class="card-body">
        {{#each actionList}}
        {{#if isWarning}}<button class="btn btn-warning me-3">{{name}}</button>{{/if}}
        {{#if isError}}<button class="btn btn-outline-danger me-3">{{name}}</button>{{/if}}
        {{#if isSuccess}}<button class="btn btn-success me-3">{{name}}</button>{{/if}}
        {{#if isGood}}<button class="btn btn-outline-success">{{name}}</button>{{/if}}
        {{/each}}
      </div>
    </div>



    {{/with}}
  </section>

  {{!-- Section Other --}}

  <section>
    <div class="row">
      {{#with goodsOtherBlock}}
      <h2 class="text-center">{{title}}</h2>
      <div class="row">
        {{> shopcard}}
      </div>
      {{/with}}
    </div>
  </section>

  {{!-- Section action --}}
  {{> shopaction}}
  <hr>
 
</section>
