{{#each goodsList}}
<div class="col-6">
  <div class="card mb-3">
    <img src="{{img}}">
    <div class="card-body">
      <div class="mb-2">
        {{#if isHot}}<div class="badge text-bg-warning rounded-pill">HOT</div> {{/if}}
        {{#if isNew}}<div class="badge text-bg-primary rounded-pill">NEW</div> {{/if}}
      </div>
      <div>
        <div>{{#if isFast}}<button class="btn btn-success btn-sm mb-2">Швидка доставка</button>{{/if}}</div>
        <div>{{#if isFree}}<button class="btn btn-secondary btn-sm">Безкоштовна доставка</button>{{/if}}</div>
      </div>
      <h5 class="mt-3">{{name}}</h5>
      {{#with review}}
      {{amount}}
      {{text}}
      {{/with}}
      <h4 class="mt-3">{{price}}</h4>
      <div class="mb-3">{{delivery}}</div>
      {{#each buttons}}
      <div>
        {{#if isPrimary}}<button class="btn btn-primary mb-2">{{text}}</button>{{/if}}
      </div>
      <div>
        {{#if isSecondary}}<button class="btn btn-secondary">{{text}}</button>{{/if}}
      </div>
      {{/each}}
      {{#each characteristics}}
      <ul class="mt-3">
        <li>
          {{title}}: {{value}}
        </li>
      </ul>
      {{/each}}
    </div>
  </div>
</div>
{{/each}}