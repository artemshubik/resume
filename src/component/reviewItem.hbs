<div class='bottom_wrapper col-12'>
  {{#each reviewList}}
    <div class='card mb-4'>
      <div class='card-body'>
        <div class='card'>
          <div class='card-body'>
            {{#with title}}
              <div class='row'>
                <div class='col-10'>
                  <h5>{{userName}}</h5>
                  <div>{{caption}}</div>
                </div>
                <div class='col-2 py-3'>
                  <div>{{date}}</div>
                </div>
              </div>
            {{/with}}
          </div>
        </div>
        {{#with reviewBody}}
          <div class='card mb-3'>
            <div class='card-body'>

              {{#with seller}}
                <div class='mb-3'>{{title}}: {{value}}</div>
              {{/with}}
              {{#with rating}}
                <div class='mb-4'>{{title}}: {{value}}</div>
              {{/with}}
              {{#each text}}
                <p>{{this}}</p>
              {{/each}}
              {{#with advantages}}
                <h5>{{title}}:</h5>
                <p>{{text}}</p>
              {{/with}}
              {{#with disadvantages}}
                <h5>{{title}}:</h5>
                <p>{{text}}</p>
              {{/with}}
              {{#each images}}
                <img src='{{this}}' />
              {{/each}}
            </div>
          </div>
          {{#each coments}}
            <div class='card col-11 mb-3'>
              <div class='card-body'>
                <div class='row mb-2'>
                  <h5 class='col-10'>{{userName}}</h5>
                  <div class='col-2'>{{date}}</div>
                </div>
                <p>{{text}}</p>
              </div>
            </div>
          {{/each}}
        {{/with}}
      </div>
    </div>
  {{/each}}

</div>