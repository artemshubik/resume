{{#each itemList}}
  <div class='row col-12'>
    <div class='col-4 my-3'>
      <p>{{number}}</p>
      <h6>{{status}}</h6>
    </div>
    <div class='col-2 my-3'>
      {{#with amount}}
        <p>{{title}}:</p>
        <h6>{{value}}</h6>
      {{/with}}
    </div>
    <div class='col-4'>
      {{#each images}}
        <img src='{{this}}' />
      {{/each}}
    </div>
    <div class='col-2 my-4'>
      {{#with button}}
        {{#if isPrimary}}<button
            link='{{link}}'
            class='btn btn-primary'
          >{{text}}</button>{{/if}}
      {{/with}}
    </div>
    <hr class='mt-3' />
  </div>
{{/each}}